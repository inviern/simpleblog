<div class="media">
  <%= link_to image_tag(post.author.picture.url, class: 'media-object'),
              user_path(post.author), class: 'pull-left' %>
  <div class="media-body">
    <h2 class="media-heading">
      <%= link_to post.title, blog_post_path(post.author.name, post) %>
    </h2>
    <p class="lead">
      by <%= link_to post.author.name, blog_path(post.author.name) %>
    </p>
  </div>
</div>
<p class="post-datetime">
  <span class="glyphicon glyphicon-time"></span>
  <%= post.created_at.to_datetime.to_s(:long) %>
</p>
<p>
  <%= formatted_post_text(post, truncate: true) %>
</p>
<div class="btn-container">

  <% if current_user == post.author %>
      <%= link_to '<span class="glyphicon glyphicon-pencil small"></span>'.html_safe,
                  edit_post_path(post) %>

      <%= link_to '<span class="glyphicon glyphicon-remove small"></span>'.html_safe,
                  post_path(post),
                  method: :delete,
                  class: 'pull-right',
                  data: { confirm: "Delete post?" } %>
  <% end %>
</div>
<hr>
