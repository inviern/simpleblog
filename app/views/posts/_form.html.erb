<%= form_for @post do |f| %>

    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |message| %>
            <span class="field_with_errors"><%= message %><br></span>
        <% end %>
        <br>
    <% end  %>

    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <br>
    <%= f.label :text %><br>
    <%= f.text_area :text %><br>
    <br>
    <%= f.submit %>
<% end %>

