<%= form_for @post, html: { role: 'form' } do |f| %>
  <%= render partial: 'shared/error_messages', locals: { object: @post } %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control', rows: '10'%>
  </div>
  <div class="form-group btn-container">
    <%= f.submit submit_name, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', blog_path(@post.author.name), class: 'btn btn-secondary' %>
  </div>
<% end %>
