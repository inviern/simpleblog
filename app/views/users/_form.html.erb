<%= form_for @user do |f| %>

    <%= render partial: 'shared/error_messages', locals: { object: @user} %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>
    <br>
    <%= f.submit %><br>
<% end %>