<% provide(:title, "Users | #{default_title}") %>

<div class="row">
  <div class="col-lg-8">
    <h1 class="page-header">Users</h1>
    <% @users.each do |user| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to user.name, user_path(user) %>
          </h4>
          <small>
            registered at <%= user.created_at.to_datetime.to_s(:long) %>
          </small>
        </div>
      </div>
      <hr>
     <% end %>
    <div class="btn-container">
      <%= link_to '<small><span class="glyphicon glyphicon-menu-left"></span>' \
        '</small> Home'.html_safe, root_path %>
    </div>
  </div>
</div>
